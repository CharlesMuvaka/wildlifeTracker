{{#partial "content"}}
    <div class="container">
        <h3 class="text-center my-4">Below is a list of all the spotted animals</h3>
        <div class="row flex-wrap">
            {{#each allLocs}}
                <div class="col-sm-3 my-2">
                    <div class="card3 text-white">
                        <h3 class="text-white my-1">{{ locationName }}</h3>
                        <img class="image3" src="{{image}}" alt="">
                        <div class="my-2">
                            <p class="text-center">This is a {{locationDescription}} of the forest</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

{{/partial}}
{{>layout.hbs}}
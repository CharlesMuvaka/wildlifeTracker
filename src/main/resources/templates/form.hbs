{{#partial "content"}}

    <div class="container">
        <div class="row  ">
            <div class="col-sm-12  d-flex flex-column align-items-center justify-content-center ">
                <h3 class="text-white my-4">Please fill in the details for the animal sighted</h3>
                <i class="text-end">On submission animal will be stored and you will be redirected to the homepage</i>
                <form action="/animal" method="post">

                    <div class="form3">
                        <div class="form1 ">

                            <div class="form-group w-100">
                                <label for="animalName">1. Enter Name of the animal</label>
                                <input required type="text" class="form-control" name="sightAnimalName" id="animalName">
                            </div>

                            <div class="form-group w-100">
                                <label for="rangerName">2. Enter your Name</label>
                                <input required type="text" name="rangerName" class="form-control"  id="rangerName">
                            </div>
                            <div class="form-group w-100">
                                <label for="location">3. Select animal species Sighted</label>
                                <select required class="form-select my-1" name="sightAnimalType"  id="location">
                                    <option value="NRare Species">Rare Species</option>
                                    <option value="Normal Animal">Normal Animal</option>
                                </select>
                            </div>
                        </div>
                        <div class="form2">


                            <div class="form-group w-100">
                                <label for="location2">4. Select the health status of the animal</label>
                                <select required class="form-select my-1" name="sightAnimalHealth"  id="location2">
                                    <option value="Sick">Sick</option>
                                    <option value="Healthy">Healthy</option>
                                </select>
                            </div>
                            <div class="form-group w-100">
                                <label for="location3">5. Select the age of the animal</label>
                                <select required class="form-select my-1" name="sightAnimalAge" class="form-control" id="location3">
                                    <option value="New Born">New-Born</option>
                                    <option value="Young">Young</option>
                                    <option value="Adult">Adult</option>
                                </select>
                            </div>

                            <div class="form-group w-100">
                                <label for="location">6. Select place of the location</label>
                                <select required class="form-select my-1" name="locationName" class="form-control" id="location">
                                    <option value="Savannah">Savannah</option>
                                    <option value="Mushy">Mushy</option>
                                    <option value="Equatorial">Equatorial</option>
                                    <option value="Swampy">Swampy</option>
                                </select>
                            </div>
                        </div>
                    </div>


                    <button type="submit" class=" my-3 btn w-75">Submit</button>
                </form>
            </div>
        </div>
    </div>

{{/partial}}
{{>layout.hbs}}